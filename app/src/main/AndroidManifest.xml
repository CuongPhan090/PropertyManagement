<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.propertymanagement">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_house"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PropertyManagement">
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/create_an_account" />
        <activity
            android:name=".ui.resetPassword.ResetPasswordActivity"
            android:label="@string/reset_password" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/login_activity" />

        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:label="@string/dashboard" />
        <activity
            android:name=".ui.splashScreen.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>